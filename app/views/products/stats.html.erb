<div class="stats-wrapper">
  <h1>Statistiques</h1>
  <table cellpadding="0" cellspacing="0" border="0">
    <thead class="tbl-header">
      <tr>
        <th>Name</th>
        <th>Brand</th>
        <th>Date</th>
        <th>Price</th>
      </tr>
    </thead>
  </table>
  <table cellpadding="0" cellspacing="0" border="0">
    <tbody class="tbl-content">
      <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.brand %></td>
        <td><%= product.purchase_date %></td>
        <td><%= product.price %></td>
      </tr>
      <% end %>
       <th>TOTAL PRICE</th>
       <th></th>
       <th></th>
       <th><%= @products.map{ |p| p.price.to_i }.sum %></th>
    </tbody>
  </table>
  <% content_for :after_js do %>
    <%= pie_chart Product.group(:ecommerce).count, colors: ["#3498db", "#FF9900"] %>
  <% end %>
</div>